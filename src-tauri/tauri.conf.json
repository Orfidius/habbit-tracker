{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "habit-tracker",
  "version": "0.1.0",
  "identifier": "com.habit-tracker.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "habit-tracker",
        "decorations": false,
        "width": 400,
        "height": 800,
        "hiddenTitle": false,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:habit.db"
      ]
    }
  }
}